<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/flash_sale_relative"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#E42F47">

        <ImageView
            android:id="@+id/flash_sale_image"
            android:layout_width="30dp"
            android:layout_height="45dp"
            android:background="@drawable/icon_back" />

        <TextView
            android:id="@+id/flash_sale_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="法式甜点"
            android:textColor="#ffffff"
            android:textSize="25dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/flash_sale_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/flash_sale_relative">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/flash_sale_one" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:background="#a0000000">

                    <TextView
                        android:id="@+id/flash_sale_sdname"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:text="鼎峰食堂"
                        android:textColor="@android:color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/falsh_sale_ys"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="67dp"
                        android:gravity="center"
                        android:text="已售"
                        android:textColor="@android:color/white"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/flash_sale_sl"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="888件"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/flash_sale_sjgm"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/flash_sale_btn"
                    android:text="立即购买"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/flash_sale_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/flash_sale_jg"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="12dp"
                    android:text="￥"
                    android:textColor="#2fbdaa"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/flash_sale_jg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/flash_sale_money"
                    android:text="28元"
                    android:textColor="#2fbdaa"
                    android:textSize="20dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFBEBEBE" />

            <LinearLayout
                android:id="@+id/flash_sale_tq"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/flash_sale_sst"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/addrico"
                    android:gravity="center"
                    android:text="支持随时退" />


                <TextView
                    android:id="@+id/flash_sale_zdt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/addrico"
                    android:gravity="center"
                    android:text="过期自动退" />


                <TextView
                    android:id="@+id/flash_sale_myy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/addrico"
                    android:gravity="center"
                    android:text="免预约" />

            </LinearLayout>


            <View
                android:id="@+id/falsh_sale_qqq"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFBEBEBE" />

            <RelativeLayout
                android:id="@+id/falsh_sale_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <View
                    android:id="@+id/falsh_sale_phone_view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#FFBEBEBE" />

                <View
                    android:id="@+id/falsh_sale_phone_bj"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_below="@+id/falsh_sale_phone_view"
                    android:background="#FFF9F9F9" />

                <View
                    android:id="@+id/falsh_sale_phone_view_tow"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/falsh_sale_phone_bj"
                    android:background="#FFBEBEBE" />

                <RelativeLayout
                    android:id="@+id/flash_sale_relative_aaa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/falsh_sale_phone_view_tow"
                    android:background="#FFF9F9F9">

                    <TextView
                        android:id="@+id/flash_sale_dpname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="鼎峰食堂"
                        android:textColor="#000000"
                        android:textSize="15dp" />

                    <RatingBar
                        android:id="@+id/view_course_star"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/flash_sale_dpname"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="4dp"
                        android:layout_marginStart="13dp"
                        android:layout_toEndOf="@+id/flash_sale_dpname"
                        android:numStars="5"
                        android:rating="4"
                        android:stepSize="0.5" />

                    <TextView
                        android:id="@+id/falsh_sale_dz"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/flash_sale_dpname"
                        android:layout_below="@+id/flash_sale_dpname"
                        android:text="兰花路富士康A区对面xxx号"
                        android:textSize="12dp" />

                    <View
                        android:id="@+id/shu_view"
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="10dp"
                        android:background="#FFBEBEBE" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/telico" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/falsh_sale_dz"
                        android:layout_alignBottom="@+id/falsh_sale_dz"
                        android:layout_marginStart="67dp"
                        android:layout_toEndOf="@+id/view_course_star"
                        android:text="距离3452km"
                        android:textSize="12dp" />
                </RelativeLayout>

                <View
                    android:id="@+id/flash_sale_aaa"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/flash_sale_relative_aaa"
                    android:background="#FFBEBEBE" />


                <View
                    android:id="@+id/flash_sale_ccc"
                    android:layout_width="match_parent"
                    android:layout_height="9dp"
                    android:layout_below="@+id/flash_sale_aaa"
                    android:background="#FFF9F9F9" />

                <View
                    android:id="@+id/flash_sale_ddd"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/flash_sale_ccc"
                    android:background="#FFBEBEBE" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/flash_sale_qgdd"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="抢购详情"
                    android:textColor="#000000"
                    android:textSize="22dp" />
            </RelativeLayout>

            <View
                android:id="@+id/flash_sale_www"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/flash_sale_qgdd"
                android:background="#FFBEBEBE" />

            <RelativeLayout
                android:id="@+id/relative_flash_sale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            </RelativeLayout>

            <View
                android:id="@+id/flash_sale_qwe"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/relative_flash_sale"
                android:background="#FFBEBEBE" />

            <View
                android:id="@+id/flash_sale_asd"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_below="@+id/flash_sale_qwe"
                android:background="#FFF9F9F9" />

            <View
                android:id="@+id/flash_sale_zxc"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/flash_sale_asd"
                android:background="#FFBEBEBE" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="购买须知"
                    android:textColor="#000000"
                    android:textSize="22dp" />
            </RelativeLayout>

            <View
                android:id="@+id/flash_sale_poi"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFBEBEBE" />

            <RelativeLayout
                android:id="@+id/relative_flash_sale_qgxz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--<ImageView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" -->
                <!--android:background=""/>-->

            </RelativeLayout>

            <View
                android:id="@+id/flash_sale_mnb"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/relative_flash_sale_qgxz"
                android:background="#FFBEBEBE" />

            <View
                android:id="@+id/flash_sale_kjh"
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:layout_below="@+id/flash_sale_mnb"
                android:background="#FFF9F9F9" />

            <View
                android:id="@+id/flash_sale_oiu"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/flash_sale_kjh"
                android:background="#FFBEBEBE" />

            <RelativeLayout
                android:id="@+id/relative_flash_qtqg"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="本店其他抢购"
                    android:textColor="#000000"
                    android:textSize="22dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFBEBEBE" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>